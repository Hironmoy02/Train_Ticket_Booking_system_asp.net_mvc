@model IEnumerable<Rail_Booking_System.Models.Train>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create",null, new {@class= "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatingCapacity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrainName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeatingCapacity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TrainId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id=item.TrainId } ,new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TrainId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
